@model Universidad

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar universidad</h1>

<h3>Esta seguro de eliminar esta universidad?</h3>
<div>
    <h4>Universidad</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Universidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_Universidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Mostrar">Lista de universidades</a>
    </form>
</div>
